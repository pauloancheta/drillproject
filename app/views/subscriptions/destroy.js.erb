$('#flash_messages').html('');
<% if @subscription.errors.any? %>
  <%= "<div class=\"alert alert-success\">#{flash[:notice]}</div>".html_safe if flash[:notice] %>
  <%= "<div class=\"alert alert-danger\">#{flash[:alert]}</div>".html_safe if flash[:alert] %>
<% else %>
  <% if /my_drills/ =~ request.original_fullpath %>
    $('#<%= dom_id(@drill_group) %>').hide();
  <% else %>
    $('#<%= dom_id(@drill_group) %> .removeDrill').replaceWith('<%= link_to "Add to My Drills", drill_group_subscriptions_path(@drill_group), class: "btn btn-default addDrill", method: :post, remote: true %>');
  <% end %>
<% end %>