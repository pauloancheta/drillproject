<%= simple_form_for user, remote: true, class: "form-horizontal" do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email, required: true %>
  <%= f.input :password, required: true %>
  <%= f.input :password_confirmation, required: true %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>